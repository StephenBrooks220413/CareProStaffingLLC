<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body class="bg-layout">

<!--Navbar-->
<%- include('layouts/navBar') -%>
<!-- Navbar -->


<div class="container" style="margin-top: 40px; margin-bottom: 40px;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                <%= note.title %>
            </li>
        </ol>
    </nav>

</div>

<div class="container text-white text-center mb-5">
    <!--Grid row-->
    <div class="row-cols-8 py-3 justify-content-center align-items-center text-center me-2 mx-auto d-flex">
        <!--Grid column-->
        <p class="lead">
            <%= note.description %>
        </p>
        <!--Grid column-->

    </div>
    <p>
        <a href="mailto:<%= note.relatedEmail %>" class="btn btn-primary">Send Email</a>
    </p>
    <!--Grid row-->
</div>

<!-- Footer -->
<%- include('layouts/footer') -%>
<!-- Footer -->

<%- include('layouts/scripts') -%>

</body>
</html>
