<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body>

<!--Navbar-->
<%- include('layouts/nav') -%>
<!-- Navbar -->

<!-- Full Page Intro -->
<div class="post" style="background-image: url('https://images.unsplash.com/photo-1565647946321-a146ac24a220?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80'); height: 280px; background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <div class="container" style="padding-top: 80px;">
        <!--Grid row-->
        <div class="row">
            <!--Grid column-->
            <div class="col-md-12 mb-4 text-center">
                <h1 class="h1-reponsive text-white text-uppercase font-weight-bold mb-0 pt-md-5 pt-5 wow fadeInDown" data-wow-delay="0.3s">
                    <strong>Community Profiles</strong>
                </h1>
            </div>
            <!--Grid column-->
        </div>
        <!--Grid row-->
    </div>
</div>
<!-- Full Page Intro -->

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Profiles</li>
        </ol>
    </nav>

</div>

<div class="container-fluid text-center mb-5">
    <p class="lead">
        Create an account to see your profile here, and describe yourself.
    </p>
    <!--Grid row-->
    <div class="row py-3">
        <!--Grid column-->
        <%for(let i =0; i < users.length; i++){%>
            <div class="col-md hover-zoom">
                <div class="card p-2">
                    <h5 class="display-6"><%= users[i].username %></h5>
                    <a href="/profile/<%= users[i]._id %>">
                        <img src="<%= users[i].image %>"
                             class="img-fluid shadow-3-strong rounded"
                             alt="img">
                    </a>
                    <p>
                        Posted On <%= users[i].joinedDate.toLocaleString() %>
                    </p>
                </div>
            </div>
        <%}%>
        <!--Grid column-->
    </div>
    <!--Grid row-->
</div>

<!--Main Layout-->

<!-- Footer -->
<%- include('layouts/footer') -%>
<!-- Footer -->

<%- include('layouts/scripts') -%>

</body>
</html>
